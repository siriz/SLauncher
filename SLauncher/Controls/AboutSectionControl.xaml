<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="SLauncher.Controls.AboutSectionControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:SLauncher.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
    <Grid.RowDefinitions>
     <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid
x:Name="LogoContainer"
            Grid.Row="0"
       Height="32"
      Margin="10"
            HorizontalAlignment="Center"
            VerticalAlignment="Top">
    <Image
     x:Name="image"
      Width="32"
         Height="32"
      Margin="0"
      HorizontalAlignment="Left"
          VerticalAlignment="Top"
    Source="/Resources/icon.ico" />
   <TextBlock
            Margin="42,0,0,0"
    HorizontalAlignment="Left"
      VerticalAlignment="Center"
  FontSize="28"
          FontWeight="Bold"
        Text="SLauncher"
 TextWrapping="Wrap" />
        </Grid>

        <TextBlock
      x:Name="SubtitleText"
          Grid.Row="1"
          Margin="10,5,10,10"
  HorizontalAlignment="Center"
            FontSize="13"
            FontStyle="Italic"
      Opacity="0.7"
            TextAlignment="Center"
        TextWrapping="Wrap" />

   <Grid Grid.Row="2" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
    <ColumnDefinition Width="auto" />
        <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

      <StackPanel Grid.Column="0" Orientation="Vertical">
       <TextBlock
 x:Name="VersionLabel"
         FontSize="13"
FontWeight="Medium" />

         <TextBlock
              x:Name="ForkByLabel"
       Margin="0,5,0,0"
   FontSize="13"
    FontWeight="Medium" />

       <TextBlock
     x:Name="BasedOnLabel"
            Margin="0,5,0,0"
             FontSize="13"
                FontWeight="Medium" />

       <TextBlock
    x:Name="GitHubLabel"
             Margin="0,5,0,0"
          FontSize="13"
        FontWeight="Medium" />

            <TextBlock
 x:Name="LicenseLabel"
   Margin="0,5,0,0"
         FontSize="13"
          FontWeight="Medium" />
    </StackPanel>

          <StackPanel
                Grid.Column="1"
      Margin="50,0,0,0"
       Orientation="Vertical">
   <TextBlock
         x:Name="VersionText"
               FontSize="13"
       Loaded="VersionText_Loaded"
    Opacity="0.7"
    Text="x.x.x" />

   <TextBlock
         Margin="0,5,0,0"
FontSize="13"
         Opacity="0.7"
         Text="SIRIZ Â© 2025" />

           <TextBlock
           Margin="0,5,0,0"
     FontSize="13"
      Opacity="0.7"
            Text="LauncherX by ClickPhase" />

       <HyperlinkButton
     Margin="0,5,0,0"
         Padding="0"
     Content="github.com/siriz/SLauncher"
      FontSize="13"
            NavigateUri="https://github.com/siriz/SLauncher" />

    <HyperlinkButton
    x:Name="LicenseLink"
        Margin="0,5,0,0"
 Padding="0"
    FontSize="13"
                    NavigateUri="https://github.com/siriz/SLauncher/blob/master/LICENSE.txt" />
    </StackPanel>
        </Grid>
    </Grid>
</UserControl>


